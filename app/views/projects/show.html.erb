<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Project</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @project.specifics.each do |specific| %>
      <tr>
        <td><%= specific.name %></td>
        <td><%= @project.id %></td>
        <td><%= link_to 'Show', project_specific_path(@project, specific) %></td>
        <td><%= link_to 'Edit', edit_project_specific_path(@project, specific) %></td>
        <td><%= link_to 'Destroy', [@project, @specific], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add Specific', new_project_specific_path(@project) %>


<!-- Photo -->
<h4>Photos</h4>
<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Project</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @project.containers.each do |photo| %>
      <tr>
        <td><%= photo.name %></td>
        <td><%= photo.project_id%></td>
        <td><%= link_to 'Show', "project_specific_path(@project, specific)" %></td>
        <td><%= link_to 'Edit', "edit_project_specific_path(@project, specific)" %></td>
        <td><%= link_to 'Destroy', "[@project, @specific], method: :delete, data: { confirm: 'Are you sure?' }" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add Photo', new_project_photo_path(@project, @container, @photo)%>

