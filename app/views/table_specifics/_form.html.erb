<div class="wrapper">
    <div class="table">
        <div class="row">
            <div class="col specific_images">Images</div>
            <div class="col c10">Factory</div>
            <div class="col c10">Article</div>
            <div class="col c10">Type Furniture</div>
            <div class="col c10">Finishing</div>
            <div class="col c10">Finishing for Client</div>
            <div class="col c10">Size</div>
            <div class="col c10">Unit price</div>
            <div class="col c10"> % </div>
            <div class="col c10">Unit price netto</div>
            <div class="col c10">Summ netto</div>
            <div class="col c10">Unit V</div>
            <div class="col c10">Summ V</div>
            <div class="col c10">Factor</div>
            <div class="col c10">Unit Price</div>
            <div class="col c10">Number of</div>
            <div class="col c10">Summ</div>
        </div>
    </div>   
    
    <div class="table">
      <%= form_for([@project, @specific, @specific.table_specifics.build], :html => { :multipart => true }) do |f| %>
         <% if @specific.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@specific.errors.count, "error") %> prohibited this specific from being saved:</h2>
            <ul>
            <% @specific.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>     

      <% @specific.table_specifics.each do |table_specific| %>
        <div class="row">
          <div class="col specific_images">
            <% @project.containers.each do |photo| %>
              <% if photo.name == table_specific.id.to_s %>
              <%= image_tag photo.image %>
              <% end %>
            <% end %>
          </div>
          <% @w = @w.to_f+@s.to_f %>
          <div class="col c10"><%= table_specific.factory %></div>
          <div class="col c10"><%= table_specific.article %></div>
          <div class="col c10"><%= table_specific.type_furniture %></div>
          <div class="col c10"><%= table_specific.finishing %></div>
          <div class="col c10"><%= table_specific.finishing_for_client %></div>
          <div class="col c10"><%= table_specific.size %></div>
          <div class="col c10"><%= table_specific.unit_price %></div>
         <div class="col c10"><%= table_specific.percent_discount %></div>
         <div class="col c10"><%= table_specific.unit_price_netto %></div>
         <div class="col c10"><%= table_specific.summ_netto %></div>
         <div class="col c10"><%= table_specific.unit_v %></div>
         <div class="col c10"><%= table_specific.summ_v %></div>
         <div class="col c10"><%= table_specific.factor %></div>
         <div class="col c10"><%= table_specific.unit_price %></div>
         <div class="col c10"><%= table_specific.number_of %></div>
         <div class="col c10"><%= table_specific.summ %></div>
        </div>
      <% end %>  
    </div>
    <div class="table">
      <div class="row">
          <div class="col specific_images"><%= file_field_tag "images[]", type: :file, multiple: true %></div>
          <div class="col c10"><%= f.text_field :factory %></div>
          <div class="col c10"><%= f.text_field :article %></div>
          <div class="col c10"><%= f.text_field :type_furniture %></div>
          <div class="col c10"><%= f.text_field :finishing %></div>
          <div class="col c10"><%= f.text_field :finishing_for_client %></div>
          <div class="col c10"><%= f.number_field :size %></div>
          <div class="col c10"><%= f.text_field :unit_price %></div>
          <div class="col c10" style="color:green"><%= f.text_field :percent_discount %></div>
          <div class="col c10"><%= f.text_field :unit_price_netto %></div>
          <div class="col c10"><%= f.number_field :unit_v %></div>
          <div class="col c10"><%= f.number_field :summ_v %></div>
          <div class="col c10"><%= f.number_field :factor %></div>
          <div class="col c10"><%= f.number_field :unit_price %></div>
          <div class="col c10"><%= f.number_field :number_of %></div>
          <div class="col c10"><%= f.number_field :summ %></div>
        </div>
  </div>
  <div class="table">
      <div class="row">
          <div class="col specific_images"></div>
          <div class="col c10"></div>
          <div class="col c10"></div>
          <div class="col c10"></div>
          <div class="col c10"></div>
          <div class="col c10"></div>
          <div class="col c10"></div>
          <div class="col c10"></div>
          <div class="col c10"></div>
          <div class="col c10"></div>
          <div class="col c10"></div>
          <div class="col c10"></div>
          <div class="col c10"></div>
        </div>
  </div>
  <div class="submit"><%= f.submit %></div>
</div>
 
<% end %>
