<div class="wrapper">
    <div class="table">
        <div class="row">
            <div class="col specific_images">Images</div>
            <div class="col c10">Factory</div>
            <div class="col c10">Model</div>
            <div class="col c10">Finishing</div>
            <div class="col c10">Description</div>
            <div class="col c10">Size</div>
            <div class="col c10">Number</div>
            <div class="col c10">Factory price</div>
            <div class="col c10">Factory sum</div>
            <div class="col c10">Factor</div>
            <div class="col c10">Price euro</div>
            <div class="col c10">Sum euro</div>
            <div class="col c10">V</div>
        </div>
    </div>     
    <div class="table">
      <% @specific.table_specifics.each do |table_specific| %>
        <div class="row">
          <div class="col specific_images">
            <% @project.containers.each do |photo| %>
              <% if photo.name == table_specific.id.to_s %>
              <%= image_tag photo.image %>
              <% end %>
            <% end %>
          </div>
          <% @w = @w.to_f+@s.to_f %>
          <div class="col c10"><%= table_specific.factory %></div>
          <div class="col c10"><%= table_specific.model %></div>
          <div class="col c10"><%= table_specific.finishing %></div>
          <div class="col c10"><%= table_specific.description %></div>
          <div class="col c10"><%= table_specific.size %></div>
          <div class="col c10"><%= table_specific.number %></div>
          <div class="col c10"><%= table_specific.factory_price %></div>
          <div class="col c10"><%= 
          q = table_specific.factory_price.to_f * table_specific.number.to_f %></div>
          <div class="col c10"><%= table_specific.factor %></div>
          <div class="col c10"><%= table_specific.price_euro %></div>
          <div class="col c10"><%= @s = q.round(2) * table_specific.factor.to_f.round(2) 
                                   @s.round(2) %></div>
          <div class="col c10"><%= table_specific.v %></div>
        </div>
      <% end %>  
    </div>
</div>
